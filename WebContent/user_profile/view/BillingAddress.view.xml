<core:View height="100%" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="sap.umc.mobile.user_profile.view.BillingAddress">
	<Page enableScrolling="true">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="{i18n>USER_PROFILE.BILLING_ADDRESS}" />
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<ObjectHeader
				title="{i18n>USER_PROFILE.CHANGE_BILLING_ADDRESS}"> <!-- class="sapUmcObjectHeaderWhiteColor" -->
				<attributes>
					<ObjectAttribute
						text="{i18n>USER_PROFILE.AGREEMENT_NUMBER} :  {billingAddress>/AgreementNumber}" />
				</attributes>
				<statuses>
				</statuses>
			</ObjectHeader>
			<l:Grid defaultSpan="L6 M10 S12" defaultIndent="L3 M1 S0">
				<l:content>
					<l:VerticalLayout width="100%">
						<!-- Address -->
						<Label text="{i18n>USER_PROFILE.FIELD_ADDRESS}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcVerticalBeforeSpacingX2 sapUmcMLabelBold" />
						<Select width="100%"
							selectedKey="{billingAddress>/selectionID}"
							enabled="{billingAddress>/_isSavable}"
							change="onBillingAddressSelected"
							class="sapUmcVerticalAfterSpacingX2"
							items="{
                                            path: 'billingAddress>/addresses',
                                            sorter: {path: '_ID'}
                                        }">
							<core:Item key="{billingAddress>_ID}"
								text="{billingAddress>AddressInfo/ShortForm}" />
						</Select>
						<!-- House/Building # - NA POSITION -->
						<Label visible="{settings>/isNorthAmerica}"
							text="{i18n>USER_PROFILE.FIELD_HOUSE_NUMBER}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
						<Input visible="{settings>/isNorthAmerica}"
							value="{billingAddress>/selection/AddressInfo/HouseNo}"
							enabled="{billingAddress>/_isNewAddress}"
							class="sapUmcVerticalAfterSpacingX2" />
						<!-- Street -->
						<Label text="{i18n>USER_PROFILE.FIELD_STREET}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
						<Input
							value="{billingAddress>/selection/AddressInfo/Street}"
							enabled="{billingAddress>/_isNewAddress}"
							class="sapUmcVerticalAfterSpacingX2" />
						<!-- House/Building # - EMEA POSITION -->
						<Label visible="{settings>/isEMEA}"
							text="{i18n>USER_PROFILE.FIELD_HOUSE_NUMBER}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
						<Input visible="{settings>/isEMEA}"
							value="{billingAddress>/selection/AddressInfo/HouseNo}"
							enabled="{billingAddress>/_isNewAddress}"
							class="sapUmcVerticalAfterSpacingX2" />
						<!-- Apt./Unit/Suite - NA ONLY -->
						<Label visible="{settings>/isNorthAmerica}"
							text="{i18n>USER_PROFILE.FIELD_APT}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
						<Input visible="{settings>/isNorthAmerica}"
							value="{billingAddress>/selection/AddressInfo/RoomNo}"
							enabled="{billingAddress>/_isNewAddress}"
							class="sapUmcVerticalAfterSpacingX2"
							placeholder="{i18n>USER_PROFILE.OPTIONAL}" />
						<!-- Zip/Postal Code - EMEA POSITION -->
						<Label visible="{settings>/isEMEA}"
							text="{i18n>USER_PROFILE.FIELD_POSTAL_CODE}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
						<Input visible="{settings>/isEMEA}"
							value="{billingAddress>/selection/AddressInfo/PostalCode}"
							enabled="{billingAddress>/_isNewAddress}"
							class="sapUmcVerticalAfterSpacingX2" />
						<!-- City -->
						<Label text="{i18n>USER_PROFILE.FIELD_CITY}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
						<Input value="{billingAddress>/selection/AddressInfo/City}"
							enabled="{billingAddress>/_isNewAddress}"
							class="sapUmcVerticalAfterSpacingX2" />
						<!-- Country -->
						<Label text="{i18n>USER_PROFILE.FIELD_COUNTRY}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
						<ComboBox width="100%"
							enabled="{billingAddress>/_isNewAddress}"
							selectedKey="{billingAddress>/selection/AddressInfo/CountryID}"
							selectionChange="onCountrySelected"
							class="sapUmcVerticalAfterSpacingX2"
							items="{
                                            path: 'country>/countries',
                                            sorter: {path: 'Name'}
                                        }">
							<core:Item key="{country>CountryID}"
								text="{country>Name}" />
						</ComboBox>
						<!-- State/Province - NA ONLY -->
						<Label visible="{settings>/isNorthAmerica}"
							text="{i18n>USER_PROFILE.FIELD_REGION}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
						<ComboBox visible="{settings>/isNorthAmerica}"
							width="100%" enabled="{billingAddress>/_isNewAddress}"
							selectedKey="{billingAddress>/selection/AddressInfo/Region}"
							class="sapUmcVerticalAfterSpacingX2"
							items="{
                                            path: 'billingAddress>/regions',
                                            sorter: {path: 'Name'}
                                        }">
							<core:Item key="{billingAddress>RegionID}"
								text="{billingAddress>Name}" />
						</ComboBox>
						<!-- Zip/Postal Code - NA POSITION -->
						<Label visible="{settings>/isNorthAmerica}"
							text="{i18n>USER_PROFILE.FIELD_POSTAL_CODE}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
						<Input visible="{settings>/isNorthAmerica}"
							value="{billingAddress>/selection/AddressInfo/PostalCode}"
							enabled="{billingAddress>/_isNewAddress}"
							class="sapUmcVerticalAfterSpacingX2" />
					</l:VerticalLayout>
				</l:content>
			</l:Grid>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="{i18n>USER_PROFILE.SAVE}"
						visible="{billingAddress>/_isSavable}" press="onPressSave"
						class="sapUmcBtnWhiteTextColor sapUmcBtnBorderLeft" />
					<Button text="{i18n>USER_PROFILE.EDIT}"
						visible="{billingAddress>/_isEditable}" press="onPressEdit"
						class="sapUmcBtnWhiteTextColor sapUmcBtnBorderLeft" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>