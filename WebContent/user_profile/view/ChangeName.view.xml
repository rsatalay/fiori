<core:View height="100%" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	controllerName="sap.umc.mobile.user_profile.view.ChangeName">
	<Page enableScrolling="true">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="{i18n>USER_PROFILE.PERSONAL_DETAILS}" />
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<ObjectHeader
				title="{personalInfo>/oldFirstName} {personalInfo>/oldLastName}"
				titleActive="false" class="sapUmcObjectHeaderWhiteColor">
				<attributes>
					<ObjectAttribute
						text="{i18n>USER_PROFILE.CHANGE_NAME_DESC}" />
				</attributes>
			</ObjectHeader>

			<f:SimpleForm maxContainerCols="1" editable="false"
				layout="ResponsiveGridLayout" title="{i18n>USER_PROFILE.NAME}"
				labelSpanL="12" labelSpanM="12" columnsL="1" columnsM="1">
				<f:content>
					<Label text="{i18n>USER_PROFILE.FIRST_NAME}"
						class="sapUmcSubsectionHeadingGrey sapUmcVerticalBeforeSpacingX2" />
					<Input type="Text" value="{personalInfo>/firstName}"
						enabled="{changeNameSettings>/editMode}"
						class="sapUmcVerticalAfterSpacingX2" />

					<Label text="{i18n>USER_PROFILE.LAST_NAME}"
						class="sapUmcSubsectionHeadingGrey" />
					<Input type="Text" value="{personalInfo>/lastName}"
						enabled="{changeNameSettings>/editMode}"
						class="sapUmcVerticalAfterSpacingX2" />
				</f:content>
			</f:SimpleForm>

		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="{i18n>USER_PROFILE.EDIT}"
						press="onEditChangeName"
						class="sapUmcBtnWhiteTextColor sapUmcBtnBorderLeft"
						visible="{path: 'changeNameSettings>/editMode', formatter: 'sap.umc.mobile.user_profile.js.utils.oppositeValueFormatter'}" />
					<Button text="{i18n>USER_PROFILE.SUBMIT}"
						press="onSubmitChangeName"
						class="sapUmcBtnWhiteTextColor sapUmcBtnBorderLeft"
						visible="{changeNameSettings>/editMode}" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>
