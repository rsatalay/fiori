<core:View height="100%" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="sap.umc.mobile.user_profile.view.BankDetail">
	<Page enableScrolling="true">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="{bankDetail>/Title}" />
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<l:Grid defaultSpan="L4 M10 S10" defaultIndent="L4 M1 S1"
				id="BankDetail_Fragment">
				<l:content>

				</l:content>
			</l:Grid>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="{i18n>USER_PROFILE.DELETE}"
						visible="{bankDetail>/EditInfo}" press="handleDeleteButton"
						class="sapUmcBtnWhiteTextColor sapUmcBtnBorderLeft" />
					<Button text="{i18n>USER_PROFILE.EDIT}"
						visible="{bankDetail>/EditInfo}" press="handleEditButton"
						class="sapUmcBtnWhiteTextColor sapUmcBtnBorderLeft" />
					<Button text="{i18n>USER_PROFILE.SAVE}"
						visible="{bankDetail>/DisplayInfo}" press="handleSaveButton"
						class="sapUmcBtnWhiteTextColor sapUmcBtnBorderLeft" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>