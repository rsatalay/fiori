<core:View height="100%" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="sap.umc.mobile.user_profile.view.AutoPay">
	<Page enableScrolling="true">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="{i18n>USER_PROFILE.AUTOPAY}" />
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<List items="{businessAgreementsContract>/results/}"
				mode="{device>/listMode}" select="handleListSelect"
				class="sapUmcAutoPayListHover sapUmcAutoPayList sapUmcAutoPayListSelect">
				<CustomListItem>
					<l:VerticalLayout width="100%">
						<Label text="{businessAgreementsContract>Description}"
							design="Bold"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcVerticalBeforeSpacingX3 sapUmcMLabelBlue" />
						<l:HorizontalLayout width="100%">
							<Label text="{i18n>USER_PROFILE.AGREEMENT_NUMBER}"
								class="sapUmcHorizontalBeforeSpacingX1_5" />
							<Label
								text="{businessAgreementsContract>ContractAccountID}"
								class="sapUmcHorizontalBeforeSpacingX1_5" />
						</l:HorizontalLayout>
						<l:HorizontalLayout width="100%">
							<Label text="{i18n>USER_PROFILE.AUTOPAY}"
								class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcVerticalBeforeSpacingX2" />
							<Switch state="{businessAgreementsContract>SwitchFlag}"
								change="onBusinessAgreementPaymentAccountSwitched"
								class="sapUmcHorizontalBeforeSpacingX2" />
						</l:HorizontalLayout>
						<Select items="{autoPaymentMethods>/results/}"
							visible="{businessAgreementsContract>SwitchFlag}" width="95%"
							change="onBusinessAgreementPaymentAccountChanged"
							selectedKey="{businessAgreementsContract>SelectedPaymentMethodKey}"
							class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcVerticalBeforeSpacingX1 sapUmcVerticalAfterSpacingX2">
							<core:Item key="{autoPaymentMethods>PaymentMethodKey}"
								text="{autoPaymentMethods>PaymentMethodName}" />
						</Select>
					</l:VerticalLayout>
				</CustomListItem>
			</List>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="{i18n>USER_PROFILE.SAVE}"
						visible="{businessAgreementsContract>/isModified}"
						press="onSaveBusinessAgreements"
						class="sapUmcBtnWhiteTextColor sapUmcBtnBorderLeft" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>