<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<l:VerticalLayout width="100%">
		<Label text="{i18n>USER_PROFILE.COUNTRY}"
			class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcVerticalBeforeSpacingX4 sapUmcMLabelBold" />
		<Input type="Text" value="{bankDetail>/CountryName}"
			visible="{bankDetail>/ShowBank}" enabled="false"
			class="sapUmcVerticalAfterSpacingX2" />
		<ComboBox items="{Countries>/results/}"
			selectedKey="{bankDetail>/seletedCountryID}"
			visible="{bankDetail>/AddBank}" width="100%"
			selectionChange="handleCountrySelect"
			class="sapUmcVerticalAfterSpacingX2">
			<core:Item key="{Countries>CountryID}"
				text="{Countries>Name}" />
		</ComboBox>
		<Label text="{i18n>USER_PROFILE.BANK_NAME}"
			class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
		<Input type="Text"
			value="{parts:['bankDetail>/BankID', 'bankDetail>/Bank/Name' ], formatter: 'sap.umc.mobile.user_profile.js.utils.bankIdFormatter' }"
			visible="{bankDetail>/ShowBank}" enabled="false"
			class="sapUmcVerticalAfterSpacingX2" />
		<ComboBox width="100%"
			selectedKey="{bankDetail>/seletedBankID}"
			selectionChange="handleBankSelect" items="{Banks>/results/}"
			visible="{bankDetail>/AddBank}" class="sapUmcVerticalAfterSpacingX2">
			<core:Item key="{Banks>BankID}" text="{Banks>Name}" />
		</ComboBox>
		<Label text="{i18n>USER_PROFILE.ACCOUNT_NUMBER}"
			class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
		<Input type="Text" value="{bankDetail>/BankAccountNo}"
			enabled="{bankDetail>/AddBank}" change="onInformationModified"
			class="sapUmcVerticalAfterSpacingX2" />
		<Label text="{i18n>USER_PROFILE.ACCOUNT_HOLDER}"
			class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
		<Input type="Text" value="{bankDetail>/AccountHolder}"
			enabled="{bankDetail>/DisplayInfo}" change="onInformationModified"
			class="sapUmcVerticalAfterSpacingX2" />
		<Label text="{i18n>USER_PROFILE.ACCOUNT_DESCRIPTION}"
			class="sapUmcHorizontalBeforeSpacingX1_5 sapUmcMLabelBold" />
		<Input type="Text" value="{bankDetail>/BankAccountName}"
			enabled="{bankDetail>/AddBank}" change="onInformationModified"
			class="sapUmcVerticalAfterSpacingX6" />
	</l:VerticalLayout>
</core:FragmentDefinition>